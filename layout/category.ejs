
<div class="blog-category col-md-9 col-lg-9 col-xl-9 col-sm-12 col-xs-12">
  <div class="blog-category-title">
    <h1><%= __('categories') %> : <%= page.category %></h1>
  </div>
  <div class="blog-category-content">
    <ul>
      <% page.posts.each(function(post, i){ %>
        <li>
        <% if (post.link){ %>
          <a href="<%- url_for(post.link) %>" target="_blank" itemprop="url"><%= post.title %></a>
        <% } else if (post.title){ %>
          <a href="<%- url_for(post.path) %>"><%= post.title %></a>
        <% } %>
        </li>
      <% }) %>  
    </ul>
  </div>
</div>
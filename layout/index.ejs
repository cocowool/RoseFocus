<div class="blog-post-lists col-md-9 col-lg-9 col-xl-9 col-sm-12 col-xs-12">
    <div class="blog-ad-home">
        <img src="<%- url_for('image/ad_home.jpg') %>" alt="扫码参与抽奖，获得腾讯视频VIP兑换卡">
    </div>
    
    <% page.posts.each(function (post) { %>
        <div class="blog-post">
            <h1><a href="<%- url_for(post.path) %>"><%= post.title %></a></h1>
            <div class="blog-post-desc">
                <p><%- post.excerpt %></p>
                <p>
                    <a href="<%- url_for(post.path) %>" class="more-link">继续阅读 »</a>&nbsp;&nbsp;
                    <span><%- date(post.date, "YYYY-MM-DD") %></span>&nbsp;&nbsp;
                    <span class="blog-post-category"><b><%- partial('_partial/post/category', { post } ) %></b></span>
                </p>
            </div>
        </div>
    <% }) %>
    
    <% page.total %>
    <% if (page.total > 1) { %>
        <div class="page-nav">
            <%- paginator({
                prev_text: "上一页",
                next_text: "下一页"
            }) %>
        </div>
    <% } %>
</div>